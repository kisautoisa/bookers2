<div class="container">
  <div class="row">
    <%= render 'list', user: @user ,  book_new: @book_new%>
    

    <div class="col-md-8 offset-md-1">
    <h2>Book detail</h2>
    <table class="table">
      <tbody>
        <tr>
          <td><%= link_to user_path(@book.user) do %>
                <%= image_tag @book.user.get_profile_image(100, 100) %><br>
                <%= @book.user.name %>
              <% end %></td>
          <td><%= link_to @book.title %></td>
          <td><%= @book.body %></td>
          <% if current_user == @book.user %>
          <td><%= link_to "Edit", edit_book_path(@book.id),class: 'btn btn-sm btn-success edit_book_143198' %></td>
          <td><%= link_to "Destroy", book_path(@book.id), method: :delete, class: 'class="btn btn-sm btn-danger destroy_book_143198', method: :delete, "data-confirm" => "本当に消しますか？" %></td>
          <% end %>
        </tr>
      </tbody>
    </table>
    </div>
  </div>
</div>
