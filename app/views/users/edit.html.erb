<div class="container">
    <div class="col-sm-12 col-md-8 col-lg-5 px-5 px-sm-0 mx-auto">
    <h2>User info</h2>
    <% if @user.errors.any? %>
  <h2><%= @user.errors.count %>errors prohibited this obj from being saved:</h2>
  <ul>
    <% @user.errors.full_messages.each do |message| %>
      <li><%= message %></li>
    <% end %>
  </ul>
<% end %>
    <%= form_with model: @user do |f| %>
      <div class="form_group">
        <label for="user_name">Name</label>
        <!--<input class="form-control name" type="text" value="saitosaki" name="user[name]" id="user_name">-->
        <%= f.text_field :name, class: "form-control name" %>
      </div>

      <div class="form_group">
        <label for="user_image ">Image</label>
        <%= f.file_field :profile_image, accept: "image/*" ,class: "form-control-file"%>

      </div>

      <div class="form_group">
        <label for="user_introduction">Introduction</label>
        <!--<textarea class="form-control introduction " name="user[introduction] " id="user_introduction "></textarea>-->
        <%= f.text_area :introduction, class: "form-control introduction" %>
      </div>

      <div class="form_group">
        <!--<input type="submit" name="commit" value="Update User" class="btn btn-secondary mt-3" data-disable-with="Update User">-->
        <%= f.submit "Update User", class: "btn btn-secondary mt-3" %>
      </div>
    <% end %>
    </div>
  </div>
</div>